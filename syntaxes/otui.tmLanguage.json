{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OTUI/OTMOD",
	"patterns": [
			{"include": "#componentDefinition"},
			{"include": "#property"},
			{"include": "#event"},
			{"include": "#state"}
	],
	"repository": {
			"componentDefinition": {
					"match": "(\\w+)\\s*<\\s*(\\w+)",
					"captures": {
							"1": {"name": "entity.name.class.otui"},
							"2": {"name": "entity.other.inherited-class.otui"}
					}
			},
			"property": {
					"match": "(\\w+)\\s*:\\s*(.+)",
					"captures": {
							"1": {"name": "support.type.property-name.otui"},
							"2": {"name": "string.unquoted.otui"}
					}
			},
			"event": {
					"match": "@(\\w+):\\s*(.+)",
					"captures": {
							"1": {"name": "support.function.event.otui"},
							"2": {"name": "string.unquoted.otui"}
					}
			},
			"state": {
					"match": "\\$(\\w+):",
					"name": "entity.name.tag.otui"
			}
	},
	"scopeName": "source.otui"
}
